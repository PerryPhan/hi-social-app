{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "lib": ["es2021", "dom"],
  "include": [
    "src/**/*"
, "public"  ],
  "exclude": [
    "node_modules"
  ]
}